# The colors, duke!
[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  # allow for highlighting whitespace in diffs
  whitespace = red reverse

[color "status"]
  added = yellow
  changed = green
  untracked = cyan
